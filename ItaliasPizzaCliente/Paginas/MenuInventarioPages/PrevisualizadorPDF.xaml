<Window x:Class="ItaliasPizzaCliente.Paginas.MenuInventarioPages.PrevisualizadorPDF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuInventarioPages"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="PrevisualizadorPDF" Height="450" Width="800">

        <StackPanel>

        <WebBrowser x:Name="PreviewBrowser" Height="700"/>

        <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="5">
                <Button
                        Content="Descargar PDF"
                        Width="140"
                        Margin="15"
                        Click="BotonDescargar_Click"/>
            </StackPanel>
            
        </StackPanel>
       
</Window>

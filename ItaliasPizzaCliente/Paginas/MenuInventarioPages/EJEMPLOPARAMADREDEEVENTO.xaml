<Page x:Class="ItaliasPizzaCliente.Paginas.MenuInventarioPages.EJEMPLOPARAMADREDEEVENTO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuInventarioPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EJEMPLOPARAMADREDEEVENTO">

    <Grid>
        <StackPanel Margin="30" Background="White">
            <TextBlock Text="Insumo recivido" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="{Binding Insumo.IdInsumo, StringFormat=ID: {0}}" FontSize="16" Margin="0 5"/>
            <TextBlock Text="{Binding Insumo.Nombre, StringFormat=Nombre: {0}}" FontSize="16" Margin="0 5"/>
            <TextBlock Text="{Binding Insumo.Cantidad, StringFormat=Cantidad: {0}}" FontSize="16" Margin="0 5"/>
            <TextBlock Text="{Binding Insumo.Status, StringFormat=Status: {0}}" FontSize="16" Margin="0 5"/>
            <TextBlock Text="{Binding Insumo.IdCategoriaInsumo, StringFormat=Categoría: {0}}" FontSize="16" Margin="0 5"/>
            <TextBlock Text="{Binding Insumo.IdUnidadDeMedida, StringFormat=Unidad: {0}}" FontSize="16" Margin="0 5"/>
        </StackPanel>
    </Grid>
</Page>

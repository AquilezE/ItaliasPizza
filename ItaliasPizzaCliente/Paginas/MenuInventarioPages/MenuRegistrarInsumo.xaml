<Page x:Class="ItaliasPizzaCliente.Paginas.MenuInventarioPages.MenuRegistrarInsumo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuInventarioPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuRegistrarInsumo"
      Background="GhostWhite">

    <Grid Margin="20">
        <!-- Dividimos el grid principal en 3 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Registrar Insumo" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Formulario -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nombre -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Nombre" Margin="0,0,0,5"/>
                <Border BorderBrush="DarkOrchid" BorderThickness="1" CornerRadius="4">
                    <TextBox Height="30" 
                             materialDesign:HintAssist.Hint="Tomate" 
                             Padding="4" 
                             x:Name="txtNombre"/>
                </Border>
            </StackPanel>

            <!-- Categoría -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Categoría" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Background="MediumPurple">
                    <ComboBox x:Name="comboBoxCategoria"
                              SelectedValuePath="IdCategoriaInsumo"
                              Height="30"
                              SelectedIndex="0"
                              Foreground="White" 
                              Background="MediumPurple"
                              BorderBrush="#FFAB1799">

                        <!-- ESTILOS Y TEMPLATES -->
                        <ComboBox.Resources>
                            <!-- 1. Template para el botón de despliegue -->
                            <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                <Grid Background="Transparent">
                                    <Path x:Name="Arrow"
                                          Fill="White"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,5,0"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </ControlTemplate>

                            <!-- 2. Template principal del ComboBox -->
                            <ControlTemplate x:Key="ComboBoxTemplate" TargetType="ComboBox">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Área de contenido -->
                                    <ContentPresenter x:Name="ContentSite"
                                                      Grid.Column="0"
                                                      Content="{TemplateBinding SelectedItem}"
                                                      ContentTemplate="{TemplateBinding ItemTemplate}"
                                                      Margin="8,3,5,3"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                    <!-- Botón de despliegue -->
                                    <ToggleButton x:Name="ToggleButton"
                                                  Grid.Column="1"
                                                  Template="{StaticResource ComboBoxToggleButton}"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="5,0"/>

                                    <!-- Popup del dropdown -->
                                    <Popup x:Name="Popup"
                                           Grid.ColumnSpan="2"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           PopupAnimation="Slide">
                                        <Border x:Name="DropDownBorder"
                                                Background="MediumPurple"
                                                BorderThickness="1"
                                                BorderBrush="YellowGreen"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ScrollViewer MaxHeight="300">
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>

                            <!-- 3. Aplicar el Template al ComboBox -->
                            <Style TargetType="ComboBox">
                                <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}"/>
                                <Setter Property="Padding" Value="4"/>
                            </Style>
                        </ComboBox.Resources>

                        <!-- DEFINICIÓN DEL ITEMTEMPLATE -->
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CategoriaInsumoNombre}" 
                                           Foreground="White"
                                           Padding="8,4"
                                           FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                        <!-- ESTILO PARA ITEMS -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="Purple"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#9932CC"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Unidad -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Unidad" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Background="MediumPurple">
                    <ComboBox x:Name="comboBoxUnidadMedida"
                              SelectedValuePath="IdUnidadDeMedida"
                              Height="30" 
                              SelectedIndex="1"
                              Foreground="White" 
                              Background="MediumPurple">

                        <!-- ESTILOS Y TEMPLATES -->
                        <ComboBox.Resources>
                            <!-- 1. Template para el botón de despliegue -->
                            <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                <Grid Background="Transparent">
                                    <Path x:Name="Arrow"
                                          Fill="White"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,5,0"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </ControlTemplate>

                            <!-- 2. Template principal del ComboBox -->
                            <ControlTemplate x:Key="ComboBoxTemplate" TargetType="ComboBox">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="ContentSite"
                                                     Grid.Column="0"
                                                     Content="{TemplateBinding SelectedItem}"
                                                     ContentTemplate="{TemplateBinding ItemTemplate}"
                                                     Margin="8,3,5,3"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left"/>

                                    <ToggleButton x:Name="ToggleButton"
                                                  Grid.Column="1"
                                                  Template="{StaticResource ComboBoxToggleButton}"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="5,0"/>

                                    <Popup x:Name="Popup"
                                           Grid.ColumnSpan="2"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           PopupAnimation="Slide">
                                        <Border x:Name="DropDownBorder"
                                                Background="MediumPurple"
                                                BorderThickness="1"
                                                BorderBrush="YellowGreen"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ScrollViewer MaxHeight="300">
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>

                            <!-- 3. Aplicar el Template al ComboBox -->
                            <Style TargetType="ComboBox">
                                <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}"/>
                            </Style>
                        </ComboBox.Resources>

                        <!-- DEFINICIÓN DEL ITEMTEMPLATE -->
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding UnidadDeMedidaNombre}" 
                                           Foreground="White"
                                           Padding="8,4"
                                           FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                        <!-- ESTILO PARA ITEMS -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="Purple"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Cantidad y precio -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Cantidad inicial" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="2" 
                            BorderBrush="DarkOrchid" 
                            BorderThickness="1" 
                            Padding="0">
                        <TextBox Width="50" 
                                 Height="30" 
                                 materialDesign:HintAssist.Hint="30" 
                                 BorderThickness="0" 
                                 Padding="4" 
                                 Background="White" 
                                 x:Name="txtCantidad" 
                                 PreviewTextInput="SoloNumeros_PreviewTextInput"/>
                    </Border>
                    <TextBlock Text=" kilogramos" 
                               VerticalAlignment="Center" 
                               Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Precio unitario" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="2" 
                            BorderBrush="DarkOrchid" 
                            BorderThickness="1" 
                            Padding="0">
                        <TextBox Width="50" 
                                 Height="30" 
                                 materialDesign:HintAssist.Hint="35"
                                 BorderThickness="0" 
                                 Margin="0" 
                                 Padding="4" 
                                 x:Name="txtPrecioUnitario" 
                                 PreviewTextInput="SoloDecimal_PreviewTextInput"/>
                    </Border>
                    <TextBlock Text=" pesos" 
                               VerticalAlignment="Center" 
                               Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="-5,116,5,-115" Grid.Row="1"/>
        </Grid>

        <!-- Botones en la parte inferior -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Botón Registrar Producto -->
            <Button Content="Registrar Producto"
                    Background="#20C997"
                    Foreground="White"
                    Width="165"
                    Height="35"
                    HorizontalAlignment="Left"
                    Grid.Column="0" 
                    Click="Button_Click"/>

            <!-- Botón Cancelar -->
            <Button Content="Cancelar"
                    Background="#E63946"
                    Foreground="White"
                    Width="100"
                    Height="35"
                    HorizontalAlignment="Right"
                    Grid.Column="1" Click="Button_ClickCancelar"/>
        </Grid>
    </Grid>
</Page>
<Page x:Class="ItaliasPizzaCliente.Paginas.MenuInventarioPages.MenuRegistrarInsumo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuInventarioPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuRegistrarInsumo"
      Background="GhostWhite">

    <Grid Margin="20">
        <!-- Dividimos el grid principal en 3 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Registrar Insumo" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Formulario -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Nombre" Margin="0,0,0,5"/>
                <Border BorderBrush="DarkOrchid" BorderThickness="1" CornerRadius="4">
                    <TextBox Height="30" materialDesign:HintAssist.Hint="Tomate" Padding="4" x:Name="txtNombre"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Categoría" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" BorderThickness="1" CornerRadius="4" Background="MediumPurple">
                    <ComboBox Height="30" SelectedIndex="0" Padding="4" Foreground="White" Background="MediumPurple" x:Name="comboBoxCategoria">
                        <ComboBox.Resources>
                            <!-- Estilo para todos los ComboBoxItem -->
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>

                                <!-- Cambiar color al pasar el mouse -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Purple"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#9932CC"/>
                                        <!-- Darker purple -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Unidad -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Unidad" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" BorderThickness="1" CornerRadius="4" Background="MediumPurple">
                    <ComboBox Height="30" SelectedIndex="0" Foreground="White" Background="MediumPurple" x:Name="comboBoxUnidadDeMedida">
                        <ComboBox.Resources>
                            <!-- Estilo para todos los ComboBoxItem -->
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>

                                <!-- Cambiar color al pasar el mouse -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Purple"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#9932CC"/>
                                        <!-- Darker purple -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Cantidad y precio -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Cantidad inicial" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="2" BorderBrush="DarkOrchid" BorderThickness="1" Padding="0">
                        <TextBox Width="50" Height="30" materialDesign:HintAssist.Hint="30" 
             BorderThickness="0" Padding="4" Background="White" x:Name="txtCantidadInicial"/>
                    </Border>
                    <TextBlock Text=" kilogramos" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Precio unitario" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="2" BorderBrush="DarkOrchid" BorderThickness="1" Padding="0">
                        <TextBox Width="50" Height="30" materialDesign:HintAssist.Hint="35"
                 BorderThickness="0" Margin="0" Padding="4" x:Name="txtPrecioUnitario"/>
                    </Border>
                    <TextBlock Text=" pesos" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Botones en la parte inferior -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Botón Cancelar alineado a la izquierda -->
            <Button Content="Cancelar"
            Background="#E63946"
            Foreground="White"
            Width="100"
            Height="35"
            HorizontalAlignment="Right"
            Grid.Column="1"/>

            <!-- Botón Registrar Producto alineado a la derecha -->
            <Button Content="Registrar Producto"
            Background="#20C997"
            Foreground="White"
            Width="165"
            Height="35"
            HorizontalAlignment="Left"
            Grid.Column="0" Click="Button_Click"/>
        </Grid>
    </Grid>
</Page>

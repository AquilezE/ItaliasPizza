<Page x:Class="ItaliasPizzaCliente.Paginas.MenuInventarioPages.MenuModificarInsumo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuInventarioPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuModificarInsumo"
      Background="GhostWhite">


    <Grid Margin="20">
        <!-- Dividimos el grid principal en 3 filas -->
        <!-- Dividimos el grid principal en 3 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sección superior -->
            <RowDefinition Height="*"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Busca el insumo a modificar" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="MediumPurple" BorderThickness="1" CornerRadius="4">
                    <TextBox Width="250" Height="30" materialDesign:HintAssist.Hint="Tomate" Padding="4" BorderThickness="0"/>
                </Border>
                <Button Width="35" Height="35" Background="Transparent" BorderThickness="0" Click="Button_Click">
                    <Viewbox Stretch="Uniform">
                        <Canvas Width="3" Height="17" VerticalAlignment="Center" >
                            <Path Data="M15.5,14h-.79l-.28-.27A6.471,6.471 0 0 0 16,9.5A6.5,6.5 0 1 0 9.5,16c1.61,0 3.09-.59 4.23-1.57l.27.28v.79l5,5L20.5,19l-5-5zm-6,0A4.5,4.5 0 1 1 14,9.5A4.5,4.5 0 0 1 9.5,14z
"
                  Fill="Gray"/>
                        </Canvas>
                    </Viewbox>
                </Button>
            </StackPanel>
            <TextBlock Text="Modificar Insumo" FontWeight="Bold" FontSize="14" Margin="0,15,0,10"/>
        </StackPanel>



        <!-- Formulario -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Nombre" Margin="0,0,0,5"/>
                <Border BorderBrush="DarkOrchid" BorderThickness="1" CornerRadius="4">
                    <TextBox Height="30" materialDesign:HintAssist.Hint="Tomate" Padding="4"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Categoría" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" BorderThickness="1" CornerRadius="4" Background="MediumPurple">
                    <ComboBox Height="30" SelectedIndex="0" Padding="4" Foreground="White" Background="MediumPurple">
                        <ComboBox.Resources>
                            <!-- Estilo para todos los ComboBoxItem -->
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>

                                <!-- Cambiar color al pasar el mouse -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Purple"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#9932CC"/>
                                        <!-- Darker purple -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Unidad -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="Unidad" Margin="0,0,0,5"/>
                <Border BorderBrush="YellowGreen" BorderThickness="1" CornerRadius="4" Background="MediumPurple">
                    <ComboBox Height="30" SelectedIndex="0" Foreground="White" Background="MediumPurple">
                        <ComboBox.Resources>
                            <!-- Estilo para todos los ComboBoxItem -->
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="MediumPurple"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>

                                <!-- Cambiar color al pasar el mouse -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Purple"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#9932CC"/>
                                        <!-- Darker purple -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>
            </StackPanel>


            <!-- Cantidad y precio -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                <TextBlock Text="Precio unitario" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="2" BorderBrush="DarkOrchid" BorderThickness="1" Padding="0">
                        <TextBox Width="50" Height="30" materialDesign:HintAssist.Hint="35"
                 BorderThickness="0" Margin="0" Padding="4"/>
                    </Border>
                    <TextBlock Text=" pesos" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Botón Cancelar alineado a la izquierda -->
            <Button Content="Cancelar"
            Background="#E63946"
            Foreground="White"
            Width="100"
            Height="35"
            HorizontalAlignment="Left"
            Grid.Column="0"/>

            <!-- Botón Eliminar centrado -->
            <Button Content="Eliminar"
            Background="#FFA500"
            Foreground="White"
            Width="100"
            Height="35"
            HorizontalAlignment="Center"
            Grid.Column="1"/>

            <!-- Botón Registrar Producto alineado a la derecha -->
            <Button Content="Registrar Producto"
            Background="#20C997"
            Foreground="White"
            Width="165"
            Height="35"
            HorizontalAlignment="Right"
            Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>

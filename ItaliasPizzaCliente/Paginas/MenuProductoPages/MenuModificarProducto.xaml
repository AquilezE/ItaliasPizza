<Page x:Class="ItaliasPizzaCliente.Paginas.MenuProductoPages.MenuModificarProducto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuProductoPages"
      xmlns:pack="http://materialdesigninxaml.net/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="MenuModificarProducto"
      Background="White"
      Margin="25">



    <Border CornerRadius="20" Background="White" Padding="10" Margin="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Nombre / Código -->
            <RowDefinition Height="Auto"/>
            <!-- Precio / Categoría -->
            <RowDefinition Height="Auto"/>
            <!-- Restricciones / Imagen -->
            <RowDefinition Height="Auto"/>
            <!-- Toggle / Cargar Imagen -->
            <RowDefinition Height="Auto"/>
            <!-- Descripción -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            
        </Grid.ColumnDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
               Text="Registrar Producto a Menú"
               FontSize="24" FontWeight="Bold"
               Margin="20,20,20,0"/>

        <!-- Nombre -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20,20,16,0">
            <TextBlock Text="Nombre"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
               Text="{Binding Nombre}"  
               />
        </StackPanel>

        <!-- Código -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="16,20,20,0">
            <TextBlock Text="Código"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
               Text="{Binding Codigo}"
               IsReadOnly="True"
               />
        </StackPanel>

        <!-- Precio -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="20,20,16,0">
            <TextBlock Text="Precio"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
               Text="{Binding Precio}"
               IsReadOnly="True"
               />
        </StackPanel>

        <!-- Categoría -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="16,20,20,0">
            <TextBlock Text="Categoría"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                ItemsSource="{Binding Categorias}"
                SelectedItem="{Binding CategoriaSeleccionada}"
                >

            </ComboBox>
        </StackPanel>

        <!-- Restricciones -->
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="20,20,16,0">
            <TextBlock Text="Restricciones"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
               Text="{Binding Restricciones}"
               AcceptsReturn="True"
               Height="80"
               />
        </StackPanel>

        <!-- Imagen de producto -->
        <Border Grid.Row="3" Grid.Column="1"
            CornerRadius="12"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="2"
            Height="120"
            Margin="16,20,20,0">
            <Image Source="{Binding ImagenProducto}"
             Stretch="UniformToFill"/>
        </Border>

        <!-- Toggle Producto con Receta -->
        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <ToggleButton
                Width="50"
                Margin="70 0 10 0"
                
                Style="{StaticResource MaterialDesignSwitchToggleButton}"
                ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background">
                <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                    <StaticResource ResourceKey="ColorMoradoNeutro" />
                </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    <StaticResource ResourceKey="PrimaryHueDarkForegroundBrush" />
                </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
            </ToggleButton>

            <TextBlock 
                Text="Procuto con Receta" 
                VerticalAlignment="Center" 
                FontSize="14" 
                Foreground="Black"/>
        </StackPanel>

        <!-- Botón Cargar Imagen -->
        <Button Grid.Row="4" Grid.Column="1"
            Style="{StaticResource MaterialDesignRaisedButton}"
            Background="{StaticResource ColorMoradoNeutro}"
            Content="Cargar Imagen"
            Height="36"
            Margin="16,20,20,0">

        </Button>

        <!-- Descripción -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Margin="20,0,20,15">
            <TextBlock Text="Descripción"
                 Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
               Text="{Binding Descripcion}"
               AcceptsReturn="True"
               Height="100"
               />
        </StackPanel>

        <!-- Botones Registrar / Cancelar -->
        <Grid Grid.Row="6" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
              Style="{StaticResource MaterialDesignRaisedButton}"
              Background="{StaticResource ColorBotonPositivo}"
              Foreground="White"
              Content="Registrar Producto"
              Width="160"/>
            <Button Grid.Column="3"
              Style="{StaticResource MaterialDesignRaisedButton}"
              Background="#E53935"
              Foreground="White"
              Content="Cancelar"
              Width="100"
              Margin="0,0,0,0"/>
        </Grid>

    </Grid>
    </Border>
</Page>

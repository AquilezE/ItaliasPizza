<Page x:Class="ItaliasPizzaCliente.Paginas.MenuProductoPages.MenuRegistrarProducto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuProductoPages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1200"
      Title="MenuRegistrarProducto">

    <Grid>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="30,10">
            <Grid HorizontalAlignment="Center" Width="900">
                <Border Background="White" Padding="30" CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nombre" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="Pizza de Pepperoni" Grid.Row="0" Grid.Column="0" Margin="0,20,10,10"/>

                        <TextBlock Text="Código" Grid.Row="0" Grid.Column="1"/>
                        <TextBox Text="P22" Grid.Row="0" Grid.Column="1" Margin="0,20,10,10"/>

                        <TextBlock Text="Precio" Grid.Row="1" Grid.Column="0"/>
                        <TextBox Text="$120" Grid.Row="1" Grid.Column="0" Margin="0,20,10,10"/>

                        <TextBlock Text="Categoría" Grid.Row="1" Grid.Column="1"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,20,10,10">
                            <ComboBoxItem Content="Pizzas"/>
                            <ComboBoxItem Content="Postres"/>
                            <ComboBoxItem Content="Bebidas"/>
                        </ComboBox>

                        <!--<Image Source="pizza.png" Grid.Row="2" Grid.Column="1" Width="150" Height="150" Margin="20"/>-->

                        <TextBlock Text="Restricciones" Grid.Row="2" Grid.Column="0"/>
                        <TextBox Text="ex. New York" Grid.Row="2" Grid.Column="0" Margin="0,20,10,10" Foreground="Gray"/>

                        <TextBlock Text="Producto con Receta" Grid.Row="3" Grid.Column="0"/>
                        <ToggleButton Content="Sí" Background="#8B5CF6" Foreground="White" Grid.Row="3" Grid.Column="0" Margin="0,20,10,10" Width="120"/>

                        <Button Content="Cargar Imagen" Grid.Row="3" Grid.Column="1" Background="#8B5CF6" Foreground="White" Margin="0,20,10,10" Width="140"/>

                        <TextBlock Text="Descripción" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <TextBox Text="Excepteur sint occaecat cupidatat non proident..." AcceptsReturn="True" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Height="100" Margin="0,20,10,10"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Registrar Producto" Background="#10B981" Foreground="White" Padding="20,5" Margin="5"/>
                            <Button Content="Cancelar" Background="#EF4444" Foreground="White" Padding="20,5" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

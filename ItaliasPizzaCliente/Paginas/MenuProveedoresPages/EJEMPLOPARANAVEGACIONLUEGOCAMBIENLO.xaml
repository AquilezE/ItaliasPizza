<Page x:Class="ItaliasPizzaCliente.Paginas.MenuProveedoresPages.EJEMPLOPARANAVEGACIONLUEGOCAMBIENLO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliasPizzaCliente.Paginas.MenuProveedoresPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EJEMPLOPARANAVEGACIONLUEGOCAMBIENLO">

    <Border Padding="30" Background="White">
        <StackPanel>
            <TextBlock Text="Proovedor q llego:" FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>
            <TextBlock Text="{Binding Proveedor.IdProveedor, StringFormat=ID: {0}}" FontSize="16"/>
            <TextBlock Text="{Binding Proveedor.Nombre, StringFormat=Nombre: {0}}" FontSize="16"/>
            <TextBlock Text="{Binding Proveedor.Telefono, StringFormat=Teléfono: {0}}" FontSize="16"/>
            <TextBlock Text="{Binding Proveedor.Direccion, StringFormat=Dirección: {0}}" FontSize="16"/>
        </StackPanel>
    </Border>
</Page>
